<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ExpedientesyRecetasFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="70dp">

            <!-- Título del formulario -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPEDIENTES Y RECETAS"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <!-- Botón para Descargar PDF -->
                <Button
                    android:id="@+id/buttonNuevoExpediente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nuevo expediente"
                    android:drawableLeft="@android:drawable/ic_menu_save"
                    android:layout_marginEnd="13dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingStart="11dp"
                    android:paddingEnd="11dp"
                    android:backgroundTint="#24A898"/>

                <Button
                    android:id="@+id/buttonCancelarPdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nueva receta"
                    android:drawableLeft="@android:drawable/ic_menu_save"
                    android:layout_marginEnd="16dp"
                    android:paddingStart="11dp"
                    android:paddingEnd="11dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:backgroundTint="#24A898"/>


            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>